<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--测试机高度69px-->
    <Space
        android:id="@+id/space_titlebar_height"
        android:layout_width="match_parent"
        android:layout_height="69px"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/space_titlebar_height">

        <ImageView
            android:id="@+id/iv_head2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:padding="3dp"
            android:src="@drawable/head_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="任务管理"
            android:textColor="#ff4d4d4d"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:padding="3dp"
            android:src="@drawable/search"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_trans_60000000"
        android:gravity="center"
        android:text="这是地图"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_title"/>

    <!--348/375=0.928-->
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shape_rec_white_cor_3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.928"/>

    <!--142/375=0.3786666666666667-->
    <LinearLayout
        android:id="@+id/ll_danger_report"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_rec_blue_cor_6dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toLeftOf="@id/ll_task_manager"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintWidth_percent="0.3786666666666667">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/danger_report"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="风险上报"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </LinearLayout>

    <!--76/375=0.2026666666666667-->
    <LinearLayout
        android:id="@+id/ll_task_manager"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_rec_bordre_blue_white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toRightOf="@id/ll_danger_report"
        app:layout_constraintRight_toLeftOf="@id/ll_contact"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintWidth_percent="0.2026666666666667">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/task_manager"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="任务管理"
            android:textColor="@color/blue_467DEC"
            android:textSize="12sp"/>
    </LinearLayout>

    <!--76/375=0.2026666666666667-->
    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_rec_bordre_blue_white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toRightOf="@id/ll_task_manager"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintWidth_percent="0.2026666666666667">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/contact"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="@color/blue_467DEC"
            android:textSize="12sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>