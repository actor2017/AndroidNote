<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.actor.sample.activity.CustomKeyboardViewActivity">

    <com.actor.myandroidframework.widget.keyboard.KeyboardInputEditText
        android:id="@+id/custom_keyboard_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入车牌号(键盘在Dialog中)"
            android:imeOptions="actionNext" />
    </com.actor.myandroidframework.widget.keyboard.KeyboardInputEditText>

    <com.actor.myandroidframework.widget.keyboard.KeyboardInputEditText
        android:id="@+id/custom_keyboard_edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入车牌号2(键盘在布局xml)"
            android:imeOptions="actionNext" />
    </com.actor.myandroidframework.widget.keyboard.KeyboardInputEditText>

    <com.actor.myandroidframework.widget.keyboard.KeyboardInputEditText
        android:id="@+id/custom_keyboard_edittext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入车牌号3(键盘在布局xml)"
            android:imeOptions="actionNext" />
    </com.actor.myandroidframework.widget.keyboard.KeyboardInputEditText>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入"
        android:imeOptions="actionDone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/red_trans_CC99"
        android:gravity="center"
        android:text="长按'W'会有惊喜哟(long press 'W')"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn" />

    <!--        <View-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="1dp"-->
    <!--            android:background="#515151" />-->

    <!--键盘-->
    <include layout="@layout/dialog_keyboard_bottom" />
</LinearLayout>
