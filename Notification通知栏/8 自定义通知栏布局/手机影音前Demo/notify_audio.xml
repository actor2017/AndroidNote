<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="3dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/notification_music_playing"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="小苹果"/>

    <ImageView
        android:id="@+id/iv_notify_pre"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_notification_pre"/>

    <ImageView
        android:id="@+id/iv_notify_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/icon_notification_next"/>

</LinearLayout>