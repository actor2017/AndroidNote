<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
        <!--上面定义是矩形-->
    <!--本文件在drawable文件下,写一个xml继承shape★★★★★-->

    <!--圆角-->
    <corners
        android:radius="10dp"/>

    <!--内边距-->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>

    <!--内部填充,纯色-->
    <solid
        android:color="#ffffce"/>

    <!--描边-->
    <stroke
        android:width="2dp"
        android:dashGap="5dp"
        android:dashWidth="10dp"
        android:color="#cccccc"/>
</shape>