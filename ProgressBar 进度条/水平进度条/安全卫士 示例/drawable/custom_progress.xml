<!--查看源码:res/values/styles.xml,点击第一条:
    <style name="AppTheme" parent="Theme.AppCompat.Light.(点这儿)NoActionBar",
    进到values.xml后搜索:Widget.AppCompat.ProgressBar,
    找到这一行:<style name="Widget.AppCompat.ProgressBar.Horizontal" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
    点进去,跳到values.xml本xml文件的约1137行:
    <style name="Base.Widget.AppCompat.ProgressBar.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
    再点进去,得到系统progressBar的style:

    <style name="Widget.ProgressBar.Horizontal">
        <item name="indeterminateOnly">false</item>
        <item name="progressDrawable">@drawable/progress_horizontal</item>
        <item name="indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="minHeight">20dip</item>
        <item name="maxHeight">20dip</item>
        <item name="mirrorForRtl">true</item>
    </style>

    再点击progressDrawable这一行,得到本xml文件源码
    -->

<!--layer-list 层的集合,分成了3层-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--进度条背景-->
    <item android:id="@android:id/background">
        <shape>
            <!--圆角,半径5dp
            <corners android:radius="5dip" />

            渐变,从什么颜色到什么颜色
			android:centerY 颜色中心偏移,默认0.5
            <gradient
                    android:startColor="#ff9d9e9d"
                    android:centerColor="#ff5a5d5a"
                    android:centerY="0.75"
                    android:endColor="#ff747674"
                    android:angle="270"
            />
            -->

            <!--纯色-->
            <solid android:color="#D9D9D9"/>
        </shape>
    </item>

    <!--缓冲进度-->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>

                <!--圆角,半径5dp
                <corners android:radius="5dip" />

                渐变,从什么颜色到什么颜色
                <gradient
                        android:startColor="#80ffd300"
                        android:centerColor="#80ffb600"
                        android:centerY="0.75"
                        android:endColor="#a0ffcb00"
                        android:angle="270"
                />-->

                <solid android:color="#E69191"/>
            </shape>
        </clip>
    </item>

    <!--进度-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <!--圆角,半径5dp
                <corners android:radius="5dip" />

                渐变,从什么颜色到什么颜色
                <gradient
                        android:startColor="#ffffd300"
                        android:centerColor="#ffffb600"
                        android:centerY="0.75"
                        android:endColor="#ffffcb00"
                        android:angle="270"
                />-->

               <solid android:color="#E69191"/>
            </shape>
        </clip>
    </item>

</layer-list>

