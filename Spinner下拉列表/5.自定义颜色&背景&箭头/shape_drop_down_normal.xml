<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--红色边框-->
            <stroke
                android:width="1dp"
                android:color="@color/red" />

            <!--left: 箭头离左侧的距离? 写0貌似也可以.-->
