<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itheima.add_remove"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.itheima.add_remove.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.itheima.add_remove.AddRemoveReceiver" >
            <intent-filter >
				<!--action可以写多个-->
                <action android:name="android.intent.action.PACKAGE_ADDED"/><!--不要用INSTALL,没用-->
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <!-- 2.发广播的时候写了数据，这里收的时候就必须写,否则接收不到 -->
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>