<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/pressed"
        android:drawable="@drawable/rainbow7"
        android:state_pressed="true"/>
    <item
        android:id="@+id/normal"
        android:drawable="@drawable/rainbow1"/>

	<!--transition:过度,转变,转换,变迁-->
    <transition
        android:fromId="@+id/normal"
        android:toId="@+id/pressed">
        <animation-list>
            <item
                android:drawable="@drawable/rainbow1"
                android:duration="50"/>
            <item
                android:drawable="@drawable/rainbow2"
                android:duration="50"/>
            <item
                android:drawable="@drawable/rainbow3"
                android:duration="50"/>
            <item
                android:drawable="@drawable/rainbow4"
                android:duration="50"/>
            <item
                android:drawable="@drawable/rainbow5"
                android:duration="50"/>
            <item
                android:drawable="@drawable/rainbow6"
                android:duration="50"/>
            <item
                android:drawable="@drawable/rainbow7"
                android:duration="50"/>
        </animation-list>
    </transition>
</animated-selector>