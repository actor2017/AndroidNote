<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".dialog.KeyboardBottomDialog">

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ececec"
        android:keyBackground="@drawable/shape_rec_border_for_key_preview"
        android:keyPreviewHeight="35dp"
        android:keyPreviewLayout="@layout/layout_for_key_preview"
        android:keyPreviewOffset="-36px"
        android:keyTextColor="#515151"
        android:keyTextSize="18sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:shadowColor="#515151"
        android:shadowRadius="0.5"
        android:visibility="gone" />
</LinearLayout>